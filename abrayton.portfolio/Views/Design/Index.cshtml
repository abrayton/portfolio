
@{
    ViewData["Title"] = "Design";
}

<div class="container mt-2 mt-md-5" data-aos="fade-up">
    <div class="row">
        <div class="col-12 mt-md-4">
            <div class="card-columns">

                <div class="card pb-3">
                    <div class="card-image-top">
                        <img class="card-img shadow" src="~/img/Design/HeartRate.jpg" alt="Heart rate UI" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Heart Rate Graph</h5>
                        <p class="card-text">
                            This simple UI allows the user to view their BPM in relation to route elevation via slider input.
                            The slider action will indicate the user's start and end time. If space is not constrained, consider
                            providing a route map visual. Prototyped with Adobe XD using the auto-animate feature.
                            
                        </p>
                        <button data-toggle="modal" data-target="#HeartRateModal" class="btn btn-primary btn-sm text-light float-right" role="button">View</button>
                    </div>
                </div>

                <div class="card pb-3">
                    <div class="card-image-top">
                        <img class="img-fluid shadow" src="~/img/Design/MyRewards.jpg" alt="My Rewards UI" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">My Rewards UI</h5>
                        <p class="card-text">
                            A lightweight rewards incentive app for users to manage their cash balance and transaction history.
                            The client's incentive program strives to reward sales performance with cash. Funds are delivered via a third-party card 
                            service featuring limited consumer support. This solution allows the user to quickly view cash 
                            balance, reward post date, and transaction history at a glance. Prototyped with Adobe XD.
                        </p>
                        <button data-toggle="modal" data-target="#MyRewardsModal" class="btn btn-primary btn-sm text-light float-right" role="button">View</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="HeartRateModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/kSKY-y5JWpk?playlist=kSKY-y5JWpk&loop=1;rel=0&autoplay=0&controls=0&showinfo=0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <a href="~/Documents/HeartRate_UI.zip"><small>Download XD File</small></a>
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="MyRewardsModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="carouselControls" class="carousel slide" data-touch="true" data-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/Design/MyRewards.jpg" class="d-block w-100" alt="My Rewards Mockup" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Design/my-rewards_ui-1-sm.jpg" class="d-block img-fluid my-0 mx-auto" alt="My Rewards Mockup 1"  />
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Design/my-rewards_ui-2-sm.jpg" class="d-block img-fluid my-0 mx-auto" alt="My Rewards Mockup 2" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="modal-footer">
                <a href="~/Documents/MyRewards_UI.zip"><small>Download XD File</small></a>
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $.backstretch("/img/bg.jpg");
        $(".modal").on('hidden.bs.modal', function (e) {
            $(".modal iframe").attr("src", $(".modal iframe").attr("src"));
        });
        $('.carousel').carousel()
    </script>
}